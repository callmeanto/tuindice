<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gdavidpb.tuindice"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.gdavidpb.tuindice.models.MyApplication"
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme.ActionBar" >
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="09b9ef4191003dd9b5ea1e9499d695ad16a60322" />

        <activity
            android:name="com.gdavidpb.tuindice.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gdavidpb.tuindice.activities.LoginActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name="com.gdavidpb.tuindice.activities.AboutActivity"
            android:label="@string/action_about"
            android:parentActivityName="com.gdavidpb.tuindice.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name="com.gdavidpb.tuindice.activities.DemoActivity"
            android:theme="@style/AppTheme.Transparent" />

        <service
            android:name="com.gdavidpb.tuindice.models.DstService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false" />

        <provider
            android:name="com.crashlytics.android.CrashlyticsInitProvider"
            android:authorities="com.gdavidpb.tuindice.crashlyticsinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.gdavidpb.tuindice.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>