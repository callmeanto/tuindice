<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@color/colorBackgroundLight">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/margin_medium">

            <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:divider="?android:attr/dividerVertical"
            android:dividerPadding="@dimen/margin_medium">

            <TextView
                android:id="@+id/tViewFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:drawablePadding="@dimen/margin_large"
                android:gravity="center_vertical"
                tools:drawableStart="@drawable/ic_account"
                tools:drawableTint="@color/colorSecondaryText"
                android:ellipsize="middle"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tViewCareer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:drawablePadding="@dimen/margin_large"
                android:gravity="center_vertical"
                tools:drawableStart="@drawable/ic_career"
                android:ellipsize="middle"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tViewUID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:drawablePadding="@dimen/margin_large"
                android:gravity="center_vertical"
                tools:drawableStart="@drawable/ic_uid"
                android:ellipsize="middle"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </TableLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>