<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bk_side_nav_bar"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dp_16"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/iViewDrawerProfile"
        android:layout_width="@dimen/size_drawer_profile"
        android:layout_height="@dimen/size_drawer_profile"
        android:paddingTop="@dimen/dp_8"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tViewDrawerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="Gerardo Prado" />

    <TextView
        android:id="@+id/tViewDrawerUsbId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        tools:text="00-00000@usb.ve" />

</LinearLayout>
